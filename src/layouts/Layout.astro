---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Institutional-grade betting intelligence across Europe's top football leagues.",
} = Astro.props;

const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="robots" content="noindex" />
    <title>{title} · Sharps Intelligence</title>
    <link rel="icon" href={`${base}favicon.svg`} type="image/svg+xml" />
  </head>
  <body class="bg-[#0d0d0d] text-gray-200 min-h-screen antialiased">
    <slot />
    <footer class="border-t border-gray-800 mt-20">
      <div class="max-w-6xl mx-auto px-6 py-8 text-center text-xs text-gray-600">
        <p>⚽ Sharps Intelligence · Research only — not financial advice · Gamble responsibly</p>
      </div>
    </footer>
  </body>
</html>
